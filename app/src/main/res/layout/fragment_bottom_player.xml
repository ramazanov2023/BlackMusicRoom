<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/bg_bottom_player">

    <ImageView
        android:id="@+id/bottom_player_pict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_music_note"
        android:backgroundTint="@color/shape_bottom_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_player_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/example_name_song"
        android:textColor="@color/text_bottom_player"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_player_play"
        app:layout_constraintStart_toEndOf="@id/bottom_player_pict"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_player_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/example_name_artist"
        android:textColor="@color/text_bottom_player"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/bottom_player_song_name"
        app:layout_constraintTop_toBottomOf="@id/bottom_player_song_name" />

    <ImageView
        android:id="@+id/bottom_player_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_play"
        android:backgroundTint="@color/shape_bottom_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_player_order"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_player_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_order_music"
        android:backgroundTint="@color/shape_bottom_player"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>