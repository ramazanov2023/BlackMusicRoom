<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playlists_list_poster"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlists_list_pl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="@string/example_name_playlist"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/playlists_list_poster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlists_list_count_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 songs"
        android:textColor="@color/text_color"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/playlists_list_pl_name"
        app:layout_constraintTop_toBottomOf="@+id/playlists_list_pl_name" />

</androidx.constraintlayout.widget.ConstraintLayout>